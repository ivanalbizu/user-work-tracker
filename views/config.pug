extends base

block content
  .wrapper
    - var page = 'config'
    include includes/header.pug
    include includes/aside.pug
    
    main#config.main
      section.config
        h2.title-section Personalizaci√≥n

        div.cards
          article.card
            header.card__header
              h3 Alertas
            main.card__body
              .form-control
                div TO-DO jornada de verano
              .form-control
                label.container-input(for='inactividad')
                  input#inactividad.input(type='checkbox' name='inactividad')
                  | Recordar tras 60 minutos de descanso
                  span.checkmark
              .form-control
                div.planning-time
                  div.dia
                  div.comienzo Hora inicio
                  div.comienzo Hora fin
                each val, key in data.config.journal
                  div.planning-time
                    div.dia= val.day
                    div.comienzo
                      input.js-time(type='time' name=`start${key}` id=`start${key}` value=val.start required)
                    div.fin
                      input.js-time(type='time' name=`end${key}` id=`end${key}` value=val.end required)
              button#save-localstorage.btn.btn--see(type='button') Guardar